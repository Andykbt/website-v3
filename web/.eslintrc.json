{
  "extends": "next/core-web-vitals",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "no-multi-spaces": ["error"],
    "no-extra-semi": ["error"],
    "no-var": ["error"],
    "semi-style": ["error", "last"]
  }
}
