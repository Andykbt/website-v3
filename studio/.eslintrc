{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["@sanity/eslint-config-studio", "eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "no-multi-spaces": ["error"],
    "no-extra-semi": ["error"],
    "no-var": ["error"],
    "semi-style": ["error", "last"]
  }
}
